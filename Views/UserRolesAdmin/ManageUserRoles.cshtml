@model InventoryManagementSystem.Models.UserRoleModel.UserRoleViewModel
    @{ 
        ViewBag.Title = "ManageUserRoles";
    }

<h2>Manage User Roles</h2>

@if (Model != null)
            {
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-6">
                                <h3>@Model.UserName</h3>
                                </div>
                            </div>
                        </div>

                    <div class="panel-body">
                        @using (Html.BeginForm("UpdateRoles", "UserRolesAdmin", FormMethod.Post, new {@class = "form"}))
                {
                    @Html.HiddenFor(m => m.UserId)
                    @Html.HiddenFor(m => m.UserName)


                    for (int i = 0; i < Model.UserRoles.Count; i++ )
                    {
                                <div class="checkbox" style="padding-left:25px">
                                    @Html.CheckBoxFor(m => m.UserRoles[i].isChecked, new { id = "userRoles_" + i })

                                    @Html.HiddenFor(m => m.UserRoles[i].Id)
                                    @Html.HiddenFor(m => m.UserRoles[i].Name)

                                    @Html.DisplayFor(m => m.UserRoles[i].Name)

                                </div>
                    }

                            <input type="submit" value="Update Role" class="btn btn-primary" />
                        }

                    </div>

                </div>
            }

else
{
    <h2>User Not Found</h2>
    @Html.ActionLink("Back to Role Admin", "Index", null, new { @class = "btn btn-primary"})
}